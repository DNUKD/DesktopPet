<Window x:Class="DesktopPet.PetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="DesktopPet"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Topmost="True"
        Background="Transparent"
        AllowsTransparency="True"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Grid>

        <Canvas x:Name="RootCanvas" Background="Transparent">

            <Image x:Name="PetImage"
                   Width="158"
                   Height="158"
                   Canvas.Left="600"
                   Canvas.Top="100">

                <Image.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Kilépés"
                                  Click="Exit_Click"/>
                    </ContextMenu>
                </Image.ContextMenu>

            </Image>

            <Image x:Name="CloudImage"
                   Width="140"
                   Height="158"
                   Cursor="Hand"
                   Visibility="Collapsed"
                   MouseLeftButtonDown="Cloud_Click"/>
            
            <Canvas x:Name="UIWindow"
                    Width="512"
                    Height="512"
                    Visibility="Collapsed"
                    Canvas.Left="0"
                    Canvas.Top="0">

                <Image x:Name="UIWindowImage"
                       Width="512"
                       Height="512"/>

                <Canvas x:Name="UIContent"
                    Width="410"
                    Height="200"
                    Canvas.Left="70"
                    Canvas.Top="100"
                    ClipToBounds="True">

                    <ScrollViewer x:Name="ChatScroll"
                                  Width="390"
                                  Height="160"
                             VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="ChatText"
                             IsReadOnly="True"
                             AcceptsReturn="True"
                             Width="370"
                             BorderThickness="0"
                             Background="Transparent"
                             TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Canvas>

                <TextBox x:Name="ChatInput"
                         Width="312"
                         Height="35"
                         Canvas.Left="70"
                         Canvas.Top="270"
                         Visibility="Collapsed"
                         KeyDown="ChatInput_KeyDown"/>

                <Button x:Name="SendButton"
                        Content="Send"
                        Width="70"
                        Height="35"
                        Canvas.Left="385"
                        Canvas.Top="270"
                        Visibility="Collapsed"
                        Click="Send_Click"/>
            </Canvas>

        </Canvas>
    </Grid>
</Window>

    